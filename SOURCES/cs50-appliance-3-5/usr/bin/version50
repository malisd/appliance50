#!/bin/bash

# format for genmon
if [ "$1" == "-v" ]; then
    echo "version"
fi

# display CS50 Appliance's version
declare rpmquery=$(/usr/bin/rpmquery cs50-appliance)
declare version=$(/usr/bin/expr "$rpmquery" : 'cs50-appliance-\(.*\)\.i386')
if [ "$version" != "" ]; then
    echo $version
else
    echo "unknown"
fi
