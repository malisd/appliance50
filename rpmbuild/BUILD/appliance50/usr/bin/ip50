#!/bin/bash

# determine IP address
declare addr=$(/sbin/ifconfig eth1 | /bin/grep 'inet addr:' | /bin/cut -d: -f2 | /bin/awk '{print $1}')
if [ "$addr" == "" ]; then
    declare addr="no IP address"
fi

# display IP address
if [ "$1" == "-xml" ]; then
    echo "<tool>IP address</tool>"
    echo "<txt>$addr</txt>"
else
    echo $addr
fi
