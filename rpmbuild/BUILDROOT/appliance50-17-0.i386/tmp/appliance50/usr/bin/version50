#!/bin/bash

# determine version
declare rpmquery=$(/usr/bin/rpmquery cs50-appliance)
declare version=$(/usr/bin/expr "$rpmquery" : 'cs50-appliance-\([0-9]*-[0-9]*\)\.i386')
if [ "$version" == "" ]; then
    declare version="unknown version"
fi

# display version
if [ "$1" == "-xml" ]; then
    echo "<tool>version</tool>"
    echo "<txt>$version</txt>"
else
    echo $version
fi
